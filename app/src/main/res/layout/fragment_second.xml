<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/deep_lilac">

    <EditText
        android:id="@+id/userName"
        style="@style/LoginEditText"
        android:layout_marginTop="38dp"
        android:hint="Username"
        android:imeOptions="actionDone"
        android:theme="@style/LoginEditText" />


    <EditText
        android:id="@+id/first_name"
        style="@style/LoginEditText"
        android:layout_marginTop="38dp"
        android:hint="Name"
        android:imeOptions="actionDone"
        android:theme="@style/LoginEditText" />

    <EditText
        android:id="@+id/last_name"
        style="@style/LoginEditText"
        android:layout_marginTop="8dp"
        android:hint="Last Name"
        android:imeOptions="actionDone"
        android:theme="@style/LoginEditText" />

    <EditText
        android:id="@+id/first_password"
        style="@style/LoginEditText"
        android:layout_marginTop="8dp"
        android:hint="Password"
        android:imeOptions="actionDone"
        android:theme="@style/LoginEditText" />

    <EditText
        android:id="@+id/second_password"
        style="@style/LoginEditText"
        android:layout_marginTop="8dp"
        android:hint="Reapeat password"
        android:imeOptions="actionDone"
        android:theme="@style/LoginEditText" />

    <com.hbb20.CountryCodePicker
        android:id="@+id/phone_country_picker"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentColor="@color/white_50"
        app:hideNameCode="true"
        app:textSize="14sp"
        app:showFullName="true"
        app:countryPreference="PL,US,UK"
        app:defaultNameCode="PL">

    </com.hbb20.CountryCodePicker>

    <EditText
        android:id="@+id/phone_input_number"
        style="@style/LoginEditText"
        android:layout_marginTop="16dp"
        android:hint="Telephone number"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:theme="@style/LoginEditText" />

    <Button
        android:id="@+id/phone_btn_send"
        style="@style/LoginOvalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Send verification SMS" />

</LinearLayout>