<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hbb20.CountryCodePicker
        android:id="@+id/phone_country_picker"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentColor="@color/white_50"
        app:hideNameCode="true"
        app:textSize="14sp"
        app:showFullName="true"
        app:countryPreference="PL,US,UK"
        app:defaultNameCode="PL">

    </com.hbb20.CountryCodePicker>

    <EditText
        android:id="@+id/phone_input_number"
        style="@style/LoginEditText"
        android:layout_marginTop="8dp"
        android:hint="Numer telefonu"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:theme="@style/LoginEditText" />

    <Button
        android:id="@+id/phone_btn_send"
        style="@style/LoginOvalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="WyÅ›lij kod SMS" />

</LinearLayout>